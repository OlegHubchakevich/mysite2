<div class="article">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="article_img">
                    <img src="%article_img%" width="211" height="192" alt="Article images">
                </div>
            </div>
            <div class="col-md-9 clearfix">
                <div class="article_text">
                    <div class="article_title">
                        <h3>%article_title%</h3>
                        <p class="date">%date%</p>
                    </div>
                    <div class="article_main_text">
                        %main_text%
                    </div>
                    <div class="comment">
                        <p>56 Comments</p>
                        <p>
                            <a href="%link_article%">continue reading...</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>