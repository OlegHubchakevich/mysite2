<h1 class="text-center">Registraton</h1>
%message%
<form class="form-horizontal" name="reg" action="#" method="post">
    <div class="form-group">
      <label for="inputLogin" class="col-sm-2 control-label">Login</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputLogin" placeholder="Login" value="%login%">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="inputPassword" placeholder="Password">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
          <a href="%address%?view=reg">Registration</a>
      </div>
    </div>
</form>